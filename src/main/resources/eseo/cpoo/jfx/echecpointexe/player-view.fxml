<VBox styleClass="body-background" stylesheets="@css/players.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eseo.cpoo.jfx.echecpointexe.MainController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <BorderPane prefHeight="200.0" HBox.hgrow="ALWAYS">
               <center>
                  <VBox alignment="CENTER" prefHeight="200.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="imagePlayerOne" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
                        <Text fx:id="pseudoPlayerOne" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Pseudo" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Text>
                        <Text fx:id="eloPlayerOne" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Elo" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <Text fx:id="leaguePlayerOne" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Ligue" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="comboboxPlayerOne" onAction="#onComboboxChange" prefWidth="150.0">
                           <VBox.margin>
                              <Insets top="40.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Button fx:id="createPlayerButtonOne" mnemonicParsing="false" onAction="#onCreateButtonClicked" styleClass="create-button" stylesheets="@css/players.css" text="Créer" textFill="WHITE">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets bottom="7.0" top="7.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
               </center>
               <top>
                  <Pane prefHeight="100.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
               </top>
               <left>
                  <Pane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Pane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
               </right>
               <bottom>
                  <Pane prefHeight="75.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
            <Separator orientation="VERTICAL" prefHeight="100.0" prefWidth="80.0">
               <HBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </HBox.margin></Separator>
            <BorderPane prefHeight="200.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
               <center>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fx:id="imagePlayerTwo" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
                        <Text fx:id="pseudoPlayerTwo" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Pseudo" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Text>
                        <Text fx:id="eloPlayerTwo" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Elo" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <Text fx:id="leaguePlayerTwo" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Ligue" textAlignment="CENTER" wrappingWidth="200.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Text>
                        <ComboBox fx:id="comboboxPlayerTwo" onAction="#onComboboxChange" prefWidth="150.0">
                           <VBox.margin>
                              <Insets top="40.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Button fx:id="createPlayerButtonTwo" mnemonicParsing="false" onAction="#onCreateButtonClicked" styleClass="create-button" stylesheets="@css/players.css" text="Créer" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets bottom="7.0" top="7.0" />
                           </padding>
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </center>
               <top>
                  <Pane prefHeight="100.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
               </top>
               <left>
                  <Pane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Pane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
               </right>
               <bottom>
                  <Pane prefHeight="75.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="880.0" styleClass="footer-background">
         <children>
            <Button fx:id="createPlayerButtonOne1" alignment="CENTER" mnemonicParsing="false" onAction="#onPlayButtonClicked" prefHeight="39.0" prefWidth="130.0" styleClass="play-button" stylesheets="@css/players.css" text="Jouer" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="7.0" top="7.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </children>
